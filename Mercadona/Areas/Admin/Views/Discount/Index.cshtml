@model List<Discount>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Discount List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Discount" asp-action="Upsert" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i> Create New Discount
                </a>
            </div>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Discount Name</th>
                <th>Discount %</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @section Scripts{
                <script src="~/js/discount.js"></script>
            }
        </tbody>
    </table>
</div>