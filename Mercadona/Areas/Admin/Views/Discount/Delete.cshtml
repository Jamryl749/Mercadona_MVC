@model Discount
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Discount</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="mb-3 row p-1">
                    <div class="col-6">
                        <label asp-for="Name" class="p-0"></label>
                        <input asp-for="Name" diable class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="DiscountValue" class="p-0"></label>
                        <input asp-for="DiscountValue" diable class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row p-1">
                    <div class="col-6">
                        <label asp-for="StartDate" class="p-0"></label>
                        <input type="date" asp-for="EndDate" diable class="form-control" />
                    </div>
                    <div class="col-6">
                        <label asp-for="EndDate" class="p-0"></label>
                        <input type="date" asp-for="EndDate" diable class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Discount" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>