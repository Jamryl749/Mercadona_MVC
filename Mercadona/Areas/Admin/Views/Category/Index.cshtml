@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr class="pt-4 pb-3">
                        <th scope="row">@category.Name</th>
                        <td class="col">
                            <div class="w-auto btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>